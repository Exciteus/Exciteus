<?xml version='1.0' encoding='utf-8'?>
    <widget id="live.exciteus.www" version="1.0.2" versionCode="11" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
        <name>ExciteUs</name>
        <description>
            Nightlife platform for young people in Leuven, Belgium
        </description>
        <author email="excite-us@outlook.be" href="https://exciteus.live">
        </author>
        <access origin="*" />
        <plugin name="cordova-plugin-whitelist" version="1" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <icon src="www/img/icon.png" />
        <platform name="android">
            <allow-intent href="market:*" />
        </platform>
        <platform name="ios">
            <allow-intent href="itms:*" />
            <allow-intent href="itms-apps:*" />
            <!-- iPhone 6 / 6+ -->
            <icon src="www/img/icons/Icon-180.png"  width="180" height="180" />

            <!-- iPhone / iPod Touch  -->
            <icon src="www/img/icons/Icon-60.png"  width="60" height="60" />
            <icon src="www/img/icons/Icon-120.png"  width="120" height="120" />

            <!-- iPad -->
            <icon src="www/img/icons/Icon-76.png"  width="76" height="76" />
            <icon src="www/img/icons/Icon-152.png"  width="152" height="152" />
            <icon src="www/img/icons/Icon-167.png"  width="167" height="167" />

            <!-- Settings Icon -->
            <icon src="www/img/icons/Icon-29.png"  width="29" height="29" />
            <icon src="www/img/icons/Icon-58.png"  width="58" height="58" />
            <icon src="www/img/icons/Icon-87.png"  width="87" height="87" />

            <!-- Spotlight Icon -->
            <icon src="www/img/icons/Icon-40.png"  width="40" height="40" />
            <icon src="www/img/icons/Icon-80.png"  width="80" height="80" />
            <icon src="www/img/icons/Icon-120.png" width="120" height="120" />
        </platform>
        


        <preference name="phonegap-version" value="cli-6.3.0" />
        <plugin name="cordova-plugin-camera" source="npm" />
        <preference name="SplashScreen" value="resourcename" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashScreen" value="splash.png" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <platform name="browser">
            <preference name="SplashScreen" value="splash.png" />
            <preference name="SplashScreenDelay" value="10000" />
            <preference name="SplashScreenBackgroundColor" value="green" />
            <preference name="ShowSplashScreen" value="false" />
            <preference name="SplashScreenWidth" value="600" />
            <preference name="SplashScreenHeight" value="300" />
        </platform>
        <preference name="FadeSplashScreen" value="false" />
        <preference name="FadeSplashScreenDuration" value="3000" />
        <splash src="splash.png" />
        <plugin name="cordova-plugin-statusbar" source="npm" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="StatusBarBackgroundColor" value="#180B3D" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <feature name="StatusBar">
            <param name="ios-package" onload="true" value="CDVStatusBar" />
        </feature>
        <engine name="ios" spec="~4.5.4" />
        <engine name="android" spec="~7.0.0" />
    </widget>